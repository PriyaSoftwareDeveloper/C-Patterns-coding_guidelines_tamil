#include <stdio.h>
#include <stdlib.h>

int main(void){
	int n,i,j;
	setbuf(stdout, NULL);
	printf("Enter n number: ");
	scanf("%d", &n);
	for (i=0; i<n; i++){
		for(j=i+1; j<n; j++){
			printf("$ ");
		}
		printf("\n");
	}
	return 0;
}

Square number Pattern with user input :
#include <stdio.h>
#include <stdlib.h>

int main(void){
	int n,i,j;
	setbuf(stdout, NULL);
	printf("Enter n numbers: ");
	scanf("%d", &n);
	for(i=0; i<n;i++){
		for(j=0; j<n; j++){
			printf("%d ", i+1);
		}
		printf("\n");
	}
	return 0;
}
