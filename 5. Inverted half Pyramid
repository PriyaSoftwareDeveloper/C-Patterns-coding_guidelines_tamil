Type 1:
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int n,i,j;
	setbuf(stdout,NULL);
	printf("Enter n no.:");
	scanf("%d",&n);
	for(i=0;i<n;i++){
		for(j=0;j<n-i;j++){
			printf("* ");
		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}

Type 2:
#include <stdio.h>
#include <stdlib.h>
void main()
{
    int i,j;
    setbuf(stdout, NULL);
    for(i=1;i<=5;i++)
    {
        for(j=5;j>=i;j--)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}

Type 3:
#include <stdio.h>
#include <stdlib.h>
void main()
{
    int i,j;
    setbuf(stdout, NULL);
    for(i=5;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
